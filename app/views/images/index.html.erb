<% provide(:title, "Home") %>

<h1>PhotoSharer</h1>
<div class="container">
  <div class="row">
    <% @images.each do |image| %>
        <div class="col-md-4 col-sm-6 col-xs-12">
          <%= link_to(image) do %>
              <img class="image_restrictions" src="<%= image.link %>">
              <p class="center">Image # <%= image.id %> | <nobr><%= link_to 'Destroy', image, method: :delete,
                                                                        data: {confirm: 'Are you sure you want to delete this image?'}%></nobr></p>
          <% end %>
        </div>
    <% end %>
  </div>
</div>

